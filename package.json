{
    "name": "jeremy",
    "version": "1.0.0",
    "description": "Jeremy Bankes's portfolio.",
    "main": "build/index.js",
    "type": "module",
    "scripts": {
        "build-client": "cd source/client && npx tsc",
        "build-server": "cd source/server && npx tsc",
        "build": "npm run build-server && npm run build-client",
        "serve": "node build/index.js",
        "build-client:watch": "cd source/client && npx tsc --watch",
        "build-server:watch": "cd source/server && npx tsc --watch",
        "serve:watch": "npx nodemon build/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JeremyBankes/jeremy.git"
    },
    "keywords": [
        "Jeremy",
        "Portfolio"
    ],
    "author": "Jeremy Bankes",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/JeremyBankes/jeremy/issues"
    },
    "homepage": "https://github.com/JeremyBankes/jeremy#readme",
    "devDependencies": {
        "@types/node": "^18.7.16",
        "nodemon": "^2.0.20",
        "typescript": "^4.8.2"
    },
    "dependencies": {
        "framework": "file:../framework"
    }
}
